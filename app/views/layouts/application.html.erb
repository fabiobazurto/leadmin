<!DOCTYPE html>
<html>
    <head>
	<title>Leadmin</title>
	<%= csrf_meta_tags %>
	<%= csp_meta_tag %>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

	<!--     <script src="https://kit.fontawesome.com/33b04dcc6e.js" crossorigin="anonymous"></script>    -->

    </head>

    <body>

	<header class="navbar navbar-inverse navbar-fixed-top">
	    <div class="navbar-header">
		<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
		    <span class="sr-only">Toggle</span>
		    <span class="icon-bar"></span>
		    <span class="icon-bar"></span>
		    <span class="icon-bar"></span>
		</button>
		<a href="<%= root_url %>%>" class="navbar-brand">JustClick</a>
	    </div>
	    <div class="sidebar-collapse">
		<ul class="nav navbar-nav sidebar-menu">
		    <li class="<%=isMenuActive("stores")%> "><a href="/stores"><%= t 'activerecord.models.store.other' %></a></li>
		    <li class="<%=isMenuActive("products")%>"><a href="/products"><%= t 'activerecord.models.product.other' %></a></li>
		    <li class="<%=isMenuActive("categories")%>"><a href="/categories"><%= t 'activerecord.models.category.other' %></a></li>
		</ul>
	    </div>
	</header>

	<div class="wrapper main">
	    <div class="page-wrapper">
		<div class="row">
		    <div class="col-xs-12">
			<% flash.each do |key, value| %>
			    <div class="<%= flash_class(key.to_sym) %>">
				<%= value %>
			    </div>
			<% end %>
	      <%= yield %>
	  </div>
      </div>
      </div>
      </div>

  </body>
</html>


