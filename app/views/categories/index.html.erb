<div class="card">
    <h1><%= t '.title' %></h1>
    <p>
	<%= link_to t('new'), new_category_path, class: 'btn btn-primary', remote: true, data: {toggle: "modal", target:'#myModal'}%>
    </p>


    <div class="table-responsive">
	<table class="table table-hover">
	    <thead>
		<tr>
		    <th><%=t('activerecord.attributes.category.name')%> </th>
		    <th colspan="3"></th>
		</tr>
	    </thead>

	    <tbody>
		<% @categories.each do |category| %>
		    <tr>
			<td><%= category.name %></td>
			<td><%= link_to t(:edit), edit_category_path(category), remote: true, data: {toggle: "modal", target:'#myModal'}  %></td>
			<td><%= link_to t(:destroy), category, method: :delete, data: { confirm: t(:are_you_sure, name:category.name) } %></td>
		    </tr>
		<% end %>
	    </tbody>
	</table>
	<%= will_paginate @categories %>

</div>
